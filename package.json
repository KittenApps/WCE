{
  "name": "wce",
  "type": "module",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "start": "rolldown --watch -c & npx -y http-server@latest ./dist -p 4000 -c-1 --cors & npm run serve:bc",
    "build": "rolldown -c",
    "test": "npm run typecheck ; npm run lint",
    "test2": "npm run tsnative ; npm run oxlint",
    "typecheck": "tsc",
    "tsnative": "tsgo",
    "lint": "eslint ./src",
    "oxlint": "oxlint --type-aware --report-unused-disable-directives",
    "serve": "npm run serve:wce & npm run serve:bc",
    "serve:wce": "npm run build && npx -y http-server@latest ./dist -p 4000 -c-1 --cors",
    "serve:bc": "npx -y http-server@latest ../Bondage-College/BondageClub -s -p 3000 -c-1 --cors",
    "update:bc": "(cd ../Bondage-College/ && git pull origin master)"
  },
  "dependencies": {
    "buttplug": "^3.2.2",
    "dexie": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/events": "^3.0.3",
    "@types/node": "^24.3.3",
    "@typescript/native-preview": "^7.0.0-dev.20250911.1",
    "bc-stubs": "^120.0.0-Beta.1",
    "bondage-club-mod-sdk": "^1.2.0",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "oxlint": "^1.15.0",
    "oxlint-tsgolint": "^0.2.0",
    "rolldown": "^1.0.0-beta.37",
    "socket.io-client": "4.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "overrides": {
    "bc-stubs": {
      "socket.io-client": "$socket.io-client"
    }
  }
}
