{
	"name": "wce",
	"type": "module",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"start": "esbuild src/index.js --bundle --outfile=./dist/wce.js --format=esm --sourcemap --watch --serve=4000 --servedir=./dist",
		"build": "esbuild src/index.js --bundle --outfile=./dist/wce.js --format=esm --sourcemap",
		"release": "npm run build && npx replace-in-file 'http://localhost:4000' $DEPLOY_PRIME_URL dist/wce-*loader.user.js",
		"test": "tsc",
		"prettier": "npx prettier src --write --trailing-comma es5 --print-width 120",
		"serve": "npx http-server ./dist -p 4000 -c-1 --cors"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/events": "^3.0.0",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"bc-stubs": "^103.0.0",
		"dexie": "^3.2.7",
		"esbuild": "^0.21.1",
		"typescript": "^5.4.5"
	}
}
