		"lint": "eslint ./src",
		"serve": "npm run build && npx http-server ./dist -p 4000 -c-1 --cors"
	},
	"dependencies": {
		"buttplug": "^3.2.2",
		"dexie": "^4.0.4"
	},
	"devDependencies": {
		"@eslint/compat": "^1.0.1",
		"@eslint/js": "^9.3.0",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/events": "^3.0.3",
		"bc-stubs": "^104.0.2",
		"esbuild": "^0.21.3",
		"eslint": "^8.57.0",
		"eslint-plugin-deprecation": "^2.0.0",
		"globals": "^15.3.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.9.0"
	}
}
